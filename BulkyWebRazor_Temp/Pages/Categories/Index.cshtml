@page
@model BulkyWebRazor_Temp.Pages.Categories.IndexModel

<div class="container">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-info">
                Category List
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-page="/categories/create" class="btn btn-primary">
                <i class="bi bi-plus-lg"></i> Create New Category
            </a>
        </div>
    </div>
</div>
<table class="table table-hover table-striped">
    <thead>
        <tr>
            <th scope="col">
                Category Name
            </th>
            <th scope="col">
                Display Order
            </th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model.CategoryList.OrderBy(u=> u.DisplayOrder))
        {
            <tr class="@(obj.DisplayOrder%2 == 0 ? "table-dark" : "table-secondary")">
                <td>@obj.Name</td>
                <td>
                    @obj.DisplayOrder
                </td>
                <td>
                    <div class="w-100 btn-group" role="group">
                        <a asp-page="/categories/edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                            <i class="bi bi-pencil-square"></i> Edit
                        </a>
                        <a asp-page="/categories/delete" asp-route-id="@obj.Id" class="btn btn-danger">
                            <i class="bi bi-trash3"></i> Delete
                        </a>
                    </div>
                </td>
            </tr>
        }
        
    </tbody>
</table>


