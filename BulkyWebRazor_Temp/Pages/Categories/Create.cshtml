@page
@model BulkyWebRazor_Temp.Pages.Categories.CreateModel

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-info">Create Category</h2>
            <hr/>
        </div>
        <div asp-validation-summary="ModelOnly"></div>
        <div class="mb-3 row">
            <label asp-for=Category.Name class="p-0"></label>
            <input asp-for=Category.Name class="form-control mt-1" />
            <span asp-validation-for="Category.Name" class="text-danger p-0"></span>
        </div>
        <div class="mb-3 row">
            <label asp-for=Category.DisplayOrder class="p-0"></label>
            <input asp-for=Category.DisplayOrder class="form-control mt-1" />
            <span asp-validation-for="Category.DisplayOrder" class="text-danger p-0"></span>
        </div>
        
        <div class="row">
            <div class="col-6 col-md-3 p-0">
                <button type="submit" class="btn btn-primary form-control">
                    Create
                </button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-page="/categories/index" class="btn btn-secondary form-control">
                    Back to List
                </a>
            </div>
        </div>
        
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial"/>
    }
}